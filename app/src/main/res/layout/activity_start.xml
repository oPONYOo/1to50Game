<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/gameNameTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/maplestory_oft_bold"
            android:text="1toN"
            android:textSize="@dimen/sp_182"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_150"
            android:textColor="#3FB5B5"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/firstBtn"
            android:layout_width="@dimen/dp_400"
            android:layout_height="@dimen/dp_240"
            android:layout_marginTop="@dimen/dp_100"
            android:background="@drawable/border_number"
            android:fontFamily="@font/maplestory_oft_bold"
            android:text="1to8"
            android:textColor="#B2ADDDB9"
            android:textSize="@dimen/sp_100"
            app:layout_constraintBottom_toTopOf="@+id/thirdBtn"
            app:layout_constraintEnd_toStartOf="@+id/secondBtn"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginEnd="@dimen/dp_30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gameNameTxtView"
            android:layout_marginRight="@dimen/dp_30" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/secondBtn"
            android:layout_width="@dimen/dp_400"
            android:layout_height="@dimen/dp_240"
            android:layout_marginTop="@dimen/dp_100"
            app:layout_constraintTop_toBottomOf="@+id/gameNameTxtView"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/border_number"
            android:fontFamily="@font/maplestory_oft_bold"
            android:text="1to32"
            android:textSize="@dimen/sp_100"
            android:textColor="#B2ADDDB9"
            app:layout_constraintStart_toEndOf="@+id/firstBtn"
            app:layout_constraintBottom_toTopOf="@+id/fourthBtn"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/thirdBtn"
            android:layout_width="@dimen/dp_400"
            android:layout_height="@dimen/dp_240"
            app:layout_constraintTop_toBottomOf="@+id/firstBtn"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/border_number"
            android:fontFamily="@font/maplestory_oft_bold"
            android:text="1to50"
            android:textSize="@dimen/sp_100"
            android:textColor="#B2ADDDB9"
            android:layout_marginEnd="@dimen/dp_30"
            app:layout_constraintEnd_toStartOf="@+id/fourthBtn"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fourthBtn"
            android:layout_width="@dimen/dp_400"
            android:layout_height="@dimen/dp_240"
            app:layout_constraintTop_toBottomOf="@+id/secondBtn"
            app:layout_constraintStart_toEndOf="@+id/thirdBtn"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/border_number"
            android:fontFamily="@font/maplestory_oft_bold"
            android:text="1to72"
            android:textSize="@dimen/sp_100"
            android:layout_marginTop="@dimen/dp_30"
            android:textColor="#B2ADDDB9"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/supereasyBtn"
            android:layout_width="@dimen/dp_400"
            android:layout_height="@dimen/dp_180"
            android:textSize="@dimen/sp_60"
            android:text="super easy"
            app:layout_constraintTop_toBottomOf="@+id/thirdBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/border_light"
            android:layout_marginTop="@dimen/dp_80"
            android:textColor="#B2ADDDB9"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/easyBtn"
            android:layout_width="@dimen/dp_400"
            android:layout_height="@dimen/dp_180"
            android:textSize="@dimen/sp_60"
            android:text="easy"
            app:layout_constraintTop_toBottomOf="@+id/supereasyBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/border_light"
            android:layout_marginTop="@dimen/dp_50"
            android:textColor="#B2ADDDB9"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/startBtn"
            android:layout_width="@dimen/dp_600"
            android:layout_height="@dimen/dp_200"
            android:textColor="#3FB5B5"
            android:text="Start!"
            android:textSize="@dimen/sp_135"
            app:layout_constraintTop_toBottomOf="@+id/easyBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/border_light"
            android:layout_marginTop="@dimen/dp_50"
            android:fontFamily="@font/maplestory_oft_bold" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>